@model OrderSystem.ViewModels.UserReportViewModel

<h3>Справка по потребител</h3>


@using (Html.BeginForm("UsersReport", "Report", FormMethod.Post))
{
    <div>
        @Html.Label("Потребител: ")
        @Html.DropDownListFor(m => m.User.Id, new SelectList(new OrderSystem.Services.Services.UserDatabaseService().GetUsers(), "Id", "UserName"), "Избери", htmlAttributes: new { @class = "custom-class-for-width", @style = "min-width: 15%;max-width: 15%;" })
        <input type="submit" value="Филтрирай" />
    </div>
}

<table class="table table-striped table-hover" style="width:75%">
    <thead style="width:100%;">
        <tr class="d-flex text-light" style="background-color:cadetblue">
            <th class="col-1">
                Номер
            </th>
            <th class="col-2">
                Цена
            </th>
            <th class="col-2">
                Дата
            </th>
            <th class="col-2">
                Статус
            </th>
            <th class="col-2">
                Адрес
            </th>
            <th class="col-3">
                Потребител
            </th>
        </tr>
    </thead>
    <tbody style="width:100%; overflow-x:hidden;">
        @foreach (var item in Model.Orders)
        {
            <tr class="d-flex">
                <td class="col-1 column-break-word">
                    @item.Number
                </td>
                <td class="col-2 column-break-word">
                    @item.Amount
                </td>
                <td class="col-2 column-break-word">
                    @item.Date.ToShortDateString()
                </td>
                <td class="col-2 column-break-word">
                    @item.Status.Name
                </td>
                <td class="col-2 column-break-word">
                    @item.Address
                </td>
                <td class="col-3 column-break-word">ac
                    @item.User.UserName
                </td>
            </tr>
        }
    </tbody>
</table>


<style>
    .column-break-word {
        word-break: break-all;
    }

    .docs-table-body-delete-btn {
        width: 30px;
        height: 30px;
    }
</style>
